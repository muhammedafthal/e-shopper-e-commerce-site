<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Category</title>
    <link rel="stylesheet" href="/css/addCategory.css">
</head>
<body>

<div class="formContainer">
    <a href="/start/admin">HOME</a>
    <form action="/api/category/add" method="POST">
        <label for="name">Category Name:</label>
        <input type="text" name="name" required>

        <label for="description">Description:</label>
        <input type="text" name="description">

        <!-- Subcategory section with dynamic input fields -->
        <label for="subcategories">Subcategories:</label>
        <div id="subcategoryContainer">
            <input type="text" name="subcategories[]" placeholder="Subcategory Name">
        </div>
        <button type="button" onclick="addSubcategory()">Add Another Subcategory</button>

        <button type="submit">Add Category</button>
    </form>
</div>

<script>
    // JavaScript function to add a new subcategory input field
    function addSubcategory() {
        const container = document.getElementById('subcategoryContainer');
        const input = document.createElement('input');
        input.type = 'text';
        input.name = 'subcategories[]'; // Name it as an array to handle multiple subcategories
        input.placeholder = 'Subcategory Name';
        container.appendChild(input);
    }
</script>

</body>
</html>
